<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="false">

        <shape android:shape="rectangle">
            <gradient android:centerColor="#FFFFFF" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />
            <corners android:radius="26dp" />
            <stroke android:width="1.3dp" android:color="@color/black" />
        </shape>
    </item>

    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <gradient android:centerColor="@color/blue_med" android:endColor="@color/blue_med" android:startColor="@color/blue_med" />
            <corners android:radius="26dp" />
            <stroke android:width="1.3dp" android:color="@color/blue_med" />
        </shape>
    </item>

</selector>
